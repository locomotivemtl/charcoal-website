{
    "default_data": {
        "type": "app/model/attachment/text-visual",
        "show_title": false
    },

    "properties": {
        "title": {
            "required": true
        },
        "subtitle": {
            "required": true
        },
        "description": {
            "type": "html",
            "required": true
        },
        "thumbnail": {
            "required": true,
            "label": "Image",
            "upload_path": "uploads/features/",
            "l10n": false,
            "apply_effects": "save",
            "effects": [
                {
                    "type": "resize",
                    "mode": "fill",
                    "width": 1280,
                    "height": 768
                },
                {
                    "type": "crop",
                    "width": 1280,
                    "height": 768
                },
                {
                    "type": "save",
                    "copy": "{{filename}}-1280x768.{{extension}}",
                    "reset": true
                }
            ],
            "sizes": {
                "default": {
                    "pattern": "{{filename}}-1280x768.{{extension}}"
                }
            }
        },
        "thumbnailVideo": {
            "type": "url"
        }
    }
}
