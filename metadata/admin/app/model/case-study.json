{
    "labels": {
        "name": "Case Studies",
        "singular_name": "Case Study",
        "create_item": "Create Case Study",
        "new_item": "New Case Study",
        "view_item": "See Case Studies",
        "edit_item": "Edit Case Study",
        "all_items": "All Case Studies",
        "menu_items": "Case Studies"
    },

    "properties": {
        "title": {
            "label": "Title"
        },
        "thumbnail": {
            "label": "Thumbnail",
            "show_notes": "above",
            "notes": "Recommended size: <strong>TBD x TBDpx</strong>"
        },
        "url": {
            "label": "URL"
        },
        "tags": {
            "label": "Tags",
            "multiple_options": {
                "separator": "|"
            }
        }
    },

    "admin": {
        "lists": {
            "app/model/list": {
                "properties": [
                    "title"
                ],
                "orders": [
                    {
                        "property": "position",
                        "mode": "asc"
                    }
                ],
                "list_actions": {
                    "create": {
                        "url": "object/edit?obj_type={{ objType }}",
                        "permissions": [ "object/create" ]
                    }
                }
            },
            "app/model/search": {
                "properties": [
                    "title"
                ]
            }
        },
        "default_list": "app/model/list",
        "default_search_list": "app/model/search",

        "forms": {
            "app/model/create": {
                "groups": {
                    "app/model/base": {}
                },
                "sidebars": {
                    "default": {}
                }
            },
            "app/model/edit": {
                "groups": {
                    "app/model/base": {},
                    "app/model/meta": {}
                },
                "sidebars": {
                    "default": {}
                }
            }
        },
        "default_form": "app/model/edit",

        "form_groups": {
            "app/model/base": {
                "title": "Case Study",
                "properties": [
                    "title",
                    "thumbnail",
                    "url",
                    "tags"
                ],
                "layout": {
                    "structure": [
                        { "columns": [ 1, 1 ] },
                        { "columns": [ 1, 1 ] }
                    ]
                }
            },
            "app/model/meta": {
                "properties": [
                    "id",
                    "lastModified",
                    "lastModifiedBy",
                    "created",
                    "createdBy"
                ],
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] },
                        { "columns": [ 1, 1 ] },
                        { "columns": [ 1, 1 ] }
                    ]
                }
            }
        }
    }
}
