    "admin": {
        "lists": {
            "app/model/list": {
                "properties": [
                    "id",
                    "name",
                    "subject",
                    "active"
                ],
                "list_actions": {
                    "create": {
                        "active": false
                    }
                }
            },
            "app/model/search": {
                "properties": [
                    "id",
                    "name",
                    "subject",
                    "msgHtml",
                    "msgTxt"
                ]
            }
        },
        "default_list": "app/model/list",
        "default_search_list": "app/model/search",

        "forms": {
            "app/model/create": {
                "groups": {
                    "app/model/base": {},
                    "app/model/meta": {}
                },
                "sidebars": {
                    "default": {}
                }
            },
            "app/model/edit": {
                "groups": {
                    "app/model/base": {},
                    "app/model/meta": {}
                },
                "sidebars": {
                    "app/model/content": {}
                }
            }
        },
        "default_form": "app/model/edit",

        "form_groups": {
            "app/model/base": {
                "priority": 100,
                "show_title": true,
                "show_header": false,
                "title": {
                    "en": "Notification",
                    "fr": "Notification"
                },
                "icon": "envelope-o",
                "properties": [
                    "name",
                    "to",
                    "cc",
                    "bcc",
                    "from",
                    "replyTo",
                    "subject",
                    "msgHtml",
                    "msgTxt"
                ],
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] },
                        { "columns": [ 1 ] },
                        { "columns": [ 1, 1 ] },
                        { "columns": [ 1, 1 ] },
                        { "columns": [ 1 ] },
                        { "columns": [ 1 ] },
                        { "columns": [ 1 ] }
                    ]
                }
            },
            "app/model/meta": {
                "priority": 200,
                "show_title": true,
                "show_header": false,
                "required_acl_permissions": "object/advanced",
                "title": {
                    "en": "Meta",
                    "fr": "Méta"
                },
                "icon": "circle-o",
                "properties": [
                    "id",
                    "lastModified",
                    "lastModifiedBy",
                    "created",
                    "createdBy"
                ],
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] },
                        { "columns": [ 1, 1 ] },
                        { "columns": [ 1, 1 ] }
                    ]
                }
            }
        }
