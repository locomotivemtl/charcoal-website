{{# hasAttachments }}
    {{# attachmentsAsRows }}
        <div class="row">
            {{# columns }}
                <div class="col-{{ columnWidth }} js-attachment-actions">
                    <div class="card my-2">
                        <div class="card-body">
                            {{> charcoal/attachment/quote }}
                        </div>
                        <div class="card-footer">
                            <a href="object/edit?obj_type={{ obj_type }}&obj_id={{ attachment_id }}"
                               data-type="{{ obj_type }}"
                               data-group="{{ attachmentGroup }}"
                               data-attachment="{{ obj_type }}"
                               data-id="{{ attachment_id }}"
                               data-title="{{# _t }}Edit{{/ _t }}"
                               data-action="edit"
                               data-form-ident="{{ attachmentType.quickFormIdent }}"
                               class="btn btn-secondary">
                                Edit quote
                            </a>
                        </div>
                    </div>
                </div>
            {{/ columns }}
        </div>
    {{/ attachmentsAsRows }}
{{/ hasAttachments }}
{{^ hasAttachments }}
    {{> charcoal/admin/widget/attachment/empty }}
{{/ hasAttachments }}