<section data-scroll-section>
    <div class="c-section u-background-light">
        <div class="c-content-horizontal-title">
            <div class="c-content-horizontal-title_inner" 
                data-scroll 
                data-scroll-offset="0"
                data-module-rail="attachment-uid-plz" 
                data-rail-speed="1.5" 
                data-scroll-call="trigger,Rail,attachment-uid-plz">
                <span class="c-heading -h1 u-color-blue">
                    {{title}}
                </span>
            </div>
            <div class="c-content-horizontal-title_infos u-anim-text-line" data-scroll data-module-split>
                {{ description }}
            </div>
        </div>
    </div>
</section>