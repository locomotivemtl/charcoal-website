<section data-scroll-section>
    <div class="c-section u-background-light">
        <div class="o-container">
            <div class="o-layout -gutter-small {{# isReversed }}-reverse{{/ isReversed }}">
                <div class="o-layout_item u-2/3@from-medium">
                    {{^ hasVideo }}
                        <img
                            class="u-border-radius u-anim"
                            data-scroll
                            src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 1034 648'%3E%3C/svg%3E"
                            alt="{{title}}"
                            data-load-src="{{thumbnail}}"
                        >
                    {{/ hasVideo }}
                    {{# hasVideo }}
                        <video
                            class="u-border-radius u-anim"
                            data-scrollsrc="{{thumbnailVideo}}"
                            poster="{{thumbnail}}"
                        ></video>
                    {{/ hasVideo }}
                </div>
                <div class="c-content-text-image_content o-layout_item u-1/3@from-medium">
                    <p class="u-color-blue u-anim" data-scroll>
                        {{ subtitle }}
                    </p>
                    <h3 class="c-content-text-image_title c-heading -h3 u-anim-text-line" data-scroll data-module-split>
                        {{ title }}
                    </h3>
                    <div class="u-anim" data-scroll>
                        {{& description }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>